{
  "name": "casecade",
  "version": "0.1.0",
  "description": "A TypeScript utility for recursively transforming property names between cases, with proper typing",
  "type": "module",
  "main": "dist/index.js",
  "private": true,
  "scripts": {
    "test": "jest",
    "build": "rollup -c",
    "lint": "eslint src/ && codecap --check && prettier --check \"**/*.{json,md,yml}\" \"*.mjs\"",
    "format": "eslint src/ --fix && codecap --fix && prettier --write \"**/*.{json,md,yml}\" \"*.mjs\""
  },
  "devDependencies": {
    "@eslint/js": "^9.25.1",
    "@rollup/plugin-typescript": "^12.1.2",
    "@types/jest": "^29.5.14",
    "codecap": "^0.3.1",
    "eslint": "^9.25.1",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.2.6",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "rollup": "^4.40.1",
    "rollup-plugin-delete": "^3.0.1",
    "ts-jest": "^29.3.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.31.1"
  },
  "jest": {
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    }
  }
}
